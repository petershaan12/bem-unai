generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  photoProfile String?
  name      String
  posts     Post[]
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  slug      String   @unique
  content   String
  bannerImage String?
  organisasiId String @db.ObjectId
  organisasi   Organisasi @relation(fields: [organisasiId], references: [id])
  date     DateTime 
  views    Int      @default(0)
  published Boolean  @default(false)
  authorId  String   @db.ObjectId
  author    User     @relation(fields: [authorId], references: [id])
}

model Organisasi {
  id          String           @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  abbreviation String
  type        String
  title       String
  description String?
  image       String?
  familyId    String?          @db.ObjectId
  family      Organisasi? @relation("FamilyRelation", fields: [familyId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children    Organisasi[] @relation("FamilyRelation")
  posts       Post[]
}

model Portal {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  link     String
} 